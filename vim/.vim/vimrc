" - Vim Plug
call plug#begin('~/.vim/plugged')

Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'
Plug 'dracula/vim', {'as': 'dracula'}
Plug 'edkolev/tmuxline.vim'
Plug 'tpope/vim-surround'
Plug 'tpope/vim-commentary'
Plug 'w0rp/ale'
Plug 'ajh17/VimCompletesMe'
Plug 'mattn/emmet-vim'
Plug 'jiangmiao/auto-pairs'
Plug 'leafgarland/typescript-vim'
Plug 'pangloss/vim-javascript'
Plug 'neovimhaskell/haskell-vim'

" - Initialize plugin system
call plug#end()

" - Basic setup
set nocompatible
syntax on

" Recent Dracula Theme messed up a ton of things ...
" these settings resolve the issues 
let g:dracula_italic = 0
colorscheme dracula
highlight Normal ctermbg=None

" - Vim Airline
let g:airline_powerline_fonts=0
let g:airline#extensions#tabline#enabled=1
let g:airline_theme='dracula'

" - Finding files recursively
set path+=**

" - display found files in tabline
set wildmenu
set wildignore+=**/node_modules/**

" - map relative number toggle
nmap <silent> <C-l> :exec &rnu? "se rnu!" : "se rnu"<CR>

" - set leader key
let mapleader = ';'

" - easy buffer navigation
noremap <leader>n :bn<cr>
noremap <leader>p :bp<cr>
noremap <leader>d :bd<cr>

" - easier window navigation
map <leader>j <C-W>j<C-W>
map <leader>k <C-W>k<C-W>
map <leader>h <C-W>h<C-W>
map <leader>l <C-W>l<C-W>

" Ale
" - lint only on save
" Write this in your vimrc file
let g:ale_lint_on_text_changed = 'never'
let g:ale_lint_on_save = 1
let g:ale_lint_on_text_changed = 0

" Tmuxline
let g:tmuxline_powerline_separators = 0
let g:tmuxline_preset = {
      \'a'    : '#S',
      \'b'  : ['#I', '#W'],
      \'win' : ['#I', '#W'],
      \'y'    : 'uptime: #(get_uptime)',
      \'z'    : '#H',
      \'options': {'status-justify': 'left'}}

" - editorconfigs
set autoindent
set indentexpr=off
set expandtab
set tabstop=2
set softtabstop=2
set shiftwidth=2 
set number

" - for indent lines
" https://vi.stackexchange.com/questions/666/how-to-add-indentation-guides-lines
" set cursorcolumn
" set cursorline

set textwidth=80
set nohls
set noshowmatch
set noshowmode
setlocal spell spelllang=en_us
set nospell

set modeline
set nojoinspaces " pesky 2-spaces after the period thing - substack :p

set nowritebackup
set noswapfile
set nobackup

