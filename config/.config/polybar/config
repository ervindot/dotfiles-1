foreground = ${colors.foreground}

enable-ipc = true

line-size = 3
line-color = #f00

; border-size = 4
; border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 3

font-0 = fixed:pixelsize=14;1
font-1 = unifont:fontformat=truetype:size=14:antialias=false;0
font-2 = siji:pixelsize=12;1

; modules-left = workspaces-xmonad title-xmonad
modules-left = ewmh 
; modules-center = mpd
modules-right = filesystem alsa xkeyboard memory cpu battery wlan temperature date powermenu

