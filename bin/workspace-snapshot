#!/bin/bash

# take workspace snapshot, then add jpg to screenshots dir
# with date and time attached

function workspace-snapshot {
  t=$(date +%T)

  "$(import -window root ~/Pictures/screenshots/screenshot-"$t".jpg)" \
      > /dev/null 2>&1;
}

if [ -d ~/Pictures/screenshots ]; then
  # take shot
  workspace-snapshot

else
  # create dir and take shot
  mkdir -p ~/Pictures/screenshots
  workspace-snapshot
fi
